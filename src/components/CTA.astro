---
import { Send } from "lucide-astro";
import { useTranslations, type Lang } from "../i18n/utils";

const t = useTranslations(Astro.currentLocale as Lang);

interface Props {
  smallTitle?: string;
}

const { smallTitle } = Astro.props;

const title = t({
  pt: "CONTACTE-ME AGORA",
  en: "CONTACT ME NOW",
});
---

<a
  href="mailto:rodrigommfreitas@protonmail.com"
  class="mt-8 inline-flex md:text-lg items-center gap-2 bg-gradient-to-tr from-green-600 to-emerald-400 hover:outline-offset-2 outline outline-1 outline-offset-8 outline-green-500/50 text-white hover:scale-[0.98] font-bold py-4 px-8 sm:px-12 rounded-full shadow-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-all duration-300"
>
  {smallTitle || title}
  <Send class="h-5 w-5 font-bold" />
</a>
