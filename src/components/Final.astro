---
import CTA from "./CTA.astro";
import { useTranslations, type Lang } from "../i18n/utils";
import { Image } from "astro:assets";
import finalImage from "../assets/x1.avif";

const t = useTranslations(Astro.currentLocale as Lang);

const smallTitle = t({
  pt: "CONTACTE-ME",
  en: "CONTACT ME",
});

const title = t({
  pt: "Estabeleça a sua presença online e",
  en: "Establish your online presence and",
});

const titleGradient = t({
  pt: "fortaleça a sua imagem!",
  en: "strengthen your image!",
});

const subtitle = t({
  pt: "Comece a atrair mais clientes com um website profissional já hoje.",
  en: "Start attracting more clients with a professional website today.",
});

const cta = t({
  pt: "CONTACTAR",
  en: "CONTACT",
});
---

<Image
  loading="lazy"
  class="w-full h-[480px] lg:h-[750px] object-cover opacity-40"
  src={finalImage}
  alt="Laptop"
/>

<div
  class="absolute inset-0 flex flex-col items-center justify-center text-center px-8 lg:px-4 xl:px-0"
>
  <div class="glass p-8 lg:p-24 rounded-2xl">
    <!-- Title -->
    <h2
      class="text-3xl md:text-5xl text-balance font-bold max-w-3xl text-white leading-tight"
    >
      {title}
      <span class="text-gradient"> {titleGradient}</span>
    </h2>
    <!-- Subtitle -->
    <p class="text-lg md:text-xl text-gray-300 mt-4">
      {subtitle}
    </p>

    <div class="sm:hidden">
      <CTA smallTitle={smallTitle} />
    </div>
    <div class="hidden sm:block">
      <CTA />
    </div>
  </div>
</div>

<style>
  .glass {
    background: rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
    backdrop-filter: blur(3px);
    -webkit-backdrop-filter: blur(3px);
  }
</style>
